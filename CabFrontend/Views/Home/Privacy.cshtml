                <input type="email" placeholder="Your Email">
                <textarea placeholder="Your Message"></textarea>
                <button type="submit">Send Message</button>
            </form>
        </section> *@
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
